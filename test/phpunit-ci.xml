<phpunit
    bootstrap="bootstrap.php">

    <testsuites>
        <testsuite>
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-text" />
    </logging>

    <filter>
        <blacklist>
            <directory>../vendor</directory>
        </blacklist>
    </filter>

</phpunit>
